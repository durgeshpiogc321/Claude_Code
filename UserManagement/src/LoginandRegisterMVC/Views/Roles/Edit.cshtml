@model LoginandRegisterMVC.Models.Role

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-warning">
                <h4><i class="fas fa-edit"></i> Edit Role</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="RoleName" />
                    <input type="hidden" asp-for="IsSystemRole" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Role Name (Read-only) -->
                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-tag"></i> Role Name:
                        </label>
                        <input type="text" class="form-control" value="@Model.RoleName" readonly disabled />
                        <small class="form-text text-muted">
                            Role names cannot be changed after creation
                        </small>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">
                            <i class="fas fa-align-left"></i> Description:
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the role and its permissions"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Update the description to clarify this role's purpose
                        </small>
                    </div>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}
