@model LoginandRegisterMVC.ViewModels.UserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit User
        </a>
    </div>
</div>

<div class="row">
    <!-- User Information Card -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-user"></i> User Information</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-envelope"></i> Email:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.UserId
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-user"></i> Username:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Username
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-shield-alt"></i> Role:</strong>
                    </div>
                    <div class="col-md-8">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge badge-danger badge-lg">
                                <i class="fas fa-crown"></i> Administrator
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-secondary badge-lg">
                                <i class="fas fa-user"></i> User
                            </span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-info-circle"></i> Account Status:</strong>
                    </div>
                    <div class="col-md-8">
                        <h5>
                            @if (Model.AccountStatus == "Active")
                            {
                                <span class="badge badge-success">
                                    <i class="fas fa-check-circle"></i> @Model.AccountStatus
                                </span>
                            }
                            else if (Model.AccountStatus == "Inactive")
                            {
                                <span class="badge badge-warning">
                                    <i class="fas fa-times-circle"></i> @Model.AccountStatus
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-danger">
                                    <i class="fas fa-trash"></i> @Model.AccountStatus
                                </span>
                            }
                        </h5>
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-calendar-plus"></i> Created:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                        <br />
                        <small class="text-muted">(@Model.AccountAge)</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong><i class="fas fa-edit"></i> Last Updated:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                    </div>
                </div>

                @if (Model.LastLoginAt.HasValue)
                {
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-clock"></i> Last Login:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.LastLoginAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            <br />
                            <small class="text-muted">(@Model.TimeSinceLastLogin)</small>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-clock"></i> Last Login:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="text-muted">Never logged in</span>
                        </div>
                    </div>
                }

                @if (Model.DeletedAt.HasValue)
                {
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="fas fa-trash"></i> Deleted:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="text-danger">
                                @Model.DeletedAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Security & Profile Card -->
    <div class="col-md-4">
        <!-- Profile Picture Card -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-image"></i> Profile Picture</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" alt="Profile" class="img-fluid rounded-circle" style="max-width: 150px; max-height: 150px;" />
                }
                else
                {
                    <div class="text-center">
                        <i class="fas fa-user-circle fa-7x text-muted"></i>
                        <p class="text-muted mt-2">No profile picture</p>
                    </div>
                }
            </div>
        </div>

        <!-- Security Information Card -->
        <div class="card">
            <div class="card-header bg-warning">
                <h5><i class="fas fa-lock"></i> Security</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Password Security:</strong>
                    <br />
                    <span class="badge @(Model.PasswordMigrated ? "badge-success" : "badge-warning")">
                        @Model.PasswordSecurityStatus
                    </span>
                </div>

                @if (Model.PasswordMigrated)
                {
                    <p class="text-success mb-0">
                        <i class="fas fa-check-circle"></i> Using secure PBKDF2 encryption
                    </p>
                }
                else
                {
                    <p class="text-warning mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Using legacy SHA1 encryption
                        <br />
                        <small>Will upgrade on next login</small>
                    </p>
                }
            </div>
        </div>

        <!-- Quick Stats Card -->
        <div class="card mt-3">
            <div class="card-header bg-secondary text-white">
                <h5><i class="fas fa-chart-bar"></i> Quick Stats</h5>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <i class="fas fa-hourglass-half"></i> <strong>Account Age:</strong>
                    <br />@Model.AccountAge
                </div>
                @if (Model.LastLoginAt.HasValue)
                {
                    <div class="mb-2">
                        <i class="fas fa-history"></i> <strong>Last Activity:</strong>
                        <br />@Model.TimeSinceLastLogin
                    </div>
                }
                <div>
                    <i class="fas fa-toggle-on"></i> <strong>Status:</strong>
                    <br />
                    @if (Model.IsActive)
                    {
                        <span class="text-success">Active & Available</span>
                    }
                    else
                    {
                        <span class="text-warning">Inactive</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit User
            </a>
            @if (Model.Role != "Admin")
            {
                @if (Model.IsActive)
                {
                    <form asp-action="Deactivate" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <button type="submit" class="btn btn-secondary" onclick="return confirm('Are you sure you want to deactivate this user?');">
                            <i class="fas fa-ban"></i> Deactivate
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="Activate" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to activate this user?');">
                            <i class="fas fa-check"></i> Activate
                        </button>
                    </form>
                }
                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone!');">
                        <i class="fas fa-trash"></i> Delete User
                    </button>
                </form>
            }
        </div>
    </div>
</div>
