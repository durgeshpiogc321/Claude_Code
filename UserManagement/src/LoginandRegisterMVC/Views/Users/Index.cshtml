@model IEnumerable<LoginandRegisterMVC.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Context.Session.GetString("Username");
    var currentRole = Context.Session.GetString("Role");
}

<!-- TempData Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <h2><i class="fas fa-users"></i> User Management</h2>
        <p class="text-muted">Welcome back, <strong>@currentUser</strong> (@currentRole)</p>
    </div>
    <div class="col-md-4 text-right">
        @if (currentRole == "Admin")
        {
            <a asp-action="Dashboard" class="btn btn-info">
                <i class="fas fa-chart-line"></i> Dashboard
            </a>
            <a asp-controller="Roles" asp-action="Index" class="btn btn-warning">
                <i class="fas fa-user-tag"></i> Roles
            </a>
        }
        <a asp-action="Register" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
        <a asp-action="Logout" class="btn btn-outline-secondary">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h2 class="card-text">@Model.Count()</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Active Users</h5>
                <h2 class="card-text">@Model.Count(u => u.IsActive)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Inactive Users</h5>
                <h2 class="card-text">@Model.Count(u => !u.IsActive)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Admins</h5>
                <h2 class="card-text">@Model.Count(u => u.Role == "Admin")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Panel -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-filter"></i> Search & Filter
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" class="form-inline">
            <div class="form-group mr-3">
                <label for="searchTerm" class="mr-2">Search:</label>
                <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="Email or Username" value="@ViewData["SearchTerm"]">
            </div>

            <div class="form-group mr-3">
                <label for="roleFilter" class="mr-2">Role:</label>
                <select name="roleFilter" id="roleFilter" class="form-control">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div>

            <div class="form-group mr-3">
                <label for="activeFilter" class="mr-2">Status:</label>
                <select name="activeFilter" id="activeFilter" class="form-control">
                    <option value="">All Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary mr-2">
                <i class="fas fa-search"></i> Search
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-redo"></i> Reset
            </a>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <i class="fas fa-table"></i> User List
                <div class="btn-group ml-3" role="group">
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="exportToCsv()">
                        <i class="fas fa-file-csv"></i> Export CSV
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-success" onclick="exportToExcel()">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <div class="btn-group" id="bulkActionsGroup" style="display: none;">
                    <button type="button" class="btn btn-sm btn-success" onclick="bulkActivate()">
                        <i class="fas fa-check-circle"></i> Activate Selected
                    </button>
                    <button type="button" class="btn btn-sm btn-warning" onclick="bulkDeactivate()">
                        <i class="fas fa-ban"></i> Deactivate Selected
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" onclick="bulkDelete()">
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
                <span id="selectedCount" class="badge badge-info" style="display: none; margin-left: 10px;">
                    <span id="selectedCountText">0</span> selected
                </span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="usersTable">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 40px;">
                                <input type="checkbox" id="selectAll" title="Select All" />
                            </th>
                            <th style="width: 60px;"></th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="UserId">Email</a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="Username">Username</a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="Role">Role</a>
                            </th>
                            <th>Status</th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="CreatedAt">Created</a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortBy="LastLoginAt">Last Login</a>
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @if (user.Role != "Admin")
                                    {
                                        <input type="checkbox" class="user-checkbox" value="@user.UserId" data-username="@user.Username" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                    {
                                        <img src="@user.ProfilePicture" alt="@user.Username" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle fa-2x text-muted"></i>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-envelope text-muted"></i> @user.UserId
                                </td>
                                <td>
                                    <i class="fas fa-user text-muted"></i> @user.Username
                                </td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-crown"></i> Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">
                                            <i class="fas fa-user"></i> User
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt"></i>
                                        @user.CreatedAt.ToString("MMM dd, yyyy")
                                    </small>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i>
                                            @user.LastLoginAt.Value.ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (user.Role != "Admin")
                                        {
                                            @if (user.IsActive)
                                            {
                                                <button type="button" class="btn btn-sm btn-secondary" onclick="confirmDeactivate('@user.UserId', '@user.Username')" title="Deactivate">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-success" onclick="confirmActivate('@user.UserId', '@user.Username')" title="Activate">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                            <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@user.UserId', '@user.Username')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No users found. Try adjusting your search filters.
            </div>
        }

        <!-- Pagination Controls -->
        @{
            var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
            var totalPages = (int)(ViewData["TotalPages"] ?? 1);
            var totalUsers = (int)(ViewData["TotalUsers"] ?? 0);
            var searchTerm = ViewData["SearchTerm"]?.ToString();
            var roleFilter = ViewData["RoleFilter"]?.ToString();
            var activeFilter = ViewData["ActiveFilter"]?.ToString();
            var sortBy = ViewData["SortBy"]?.ToString() ?? "CreatedAt";
            var sortOrder = ViewData["SortOrder"]?.ToString() ?? "desc";
        }

        @if (totalPages > 1)
        {
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-muted">
                            Showing page @currentPage of @totalPages (Total: @totalUsers users)
                        </p>
                    </div>
                    <div class="col-md-6">
                        <nav aria-label="User list pagination">
                            <ul class="pagination justify-content-end mb-0">
                                <!-- Previous Button -->
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageNumber="@(currentPage - 1)"
                                       asp-route-searchTerm="@searchTerm"
                                       asp-route-roleFilter="@roleFilter"
                                       asp-route-activeFilter="@activeFilter"
                                       asp-route-sortBy="@sortBy"
                                       asp-route-sortOrder="@sortOrder"
                                       aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>

                                <!-- Page Numbers -->
                                @{
                                    var startPage = Math.Max(1, currentPage - 2);
                                    var endPage = Math.Min(totalPages, currentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageNumber="1"
                                           asp-route-searchTerm="@searchTerm"
                                           asp-route-roleFilter="@roleFilter"
                                           asp-route-activeFilter="@activeFilter"
                                           asp-route-sortBy="@sortBy"
                                           asp-route-sortOrder="@sortOrder">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                @for (var i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageNumber="@i"
                                           asp-route-searchTerm="@searchTerm"
                                           asp-route-roleFilter="@roleFilter"
                                           asp-route-activeFilter="@activeFilter"
                                           asp-route-sortBy="@sortBy"
                                           asp-route-sortOrder="@sortOrder">@i</a>
                                    </li>
                                }

                                @if (endPage < totalPages)
                                {
                                    @if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageNumber="@totalPages"
                                           asp-route-searchTerm="@searchTerm"
                                           asp-route-roleFilter="@roleFilter"
                                           asp-route-activeFilter="@activeFilter"
                                           asp-route-sortBy="@sortBy"
                                           asp-route-sortOrder="@sortOrder">@totalPages</a>
                                    </li>
                                }

                                <!-- Next Button -->
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageNumber="@(currentPage + 1)"
                                       asp-route-searchTerm="@searchTerm"
                                       asp-route-roleFilter="@roleFilter"
                                       asp-route-activeFilter="@activeFilter"
                                       asp-route-sortBy="@sortBy"
                                       asp-route-sortOrder="@sortOrder"
                                       aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete user <strong id="deleteUsername"></strong>?</p>
                <p class="text-danger"><i class="fas fa-exclamation-circle"></i> This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="deleteUserId" name="userId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Deactivate Confirmation Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="fas fa-ban"></i> Confirm Deactivate</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to deactivate user <strong id="deactivateUsername"></strong>?</p>
                <p class="text-muted">The user will not be able to login until reactivated.</p>
            </div>
            <div class="modal-footer">
                <form id="deactivateForm" method="post" asp-action="Deactivate">
                    <input type="hidden" id="deactivateUserId" name="userId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-ban"></i> Deactivate User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Activate Confirmation Modal -->
<div class="modal fade" id="activateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-check-circle"></i> Confirm Activate</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to activate user <strong id="activateUsername"></strong>?</p>
                <p class="text-muted">The user will be able to login again.</p>
            </div>
            <div class="modal-footer">
                <form id="activateForm" method="post" asp-action="Activate">
                    <input type="hidden" id="activateUserId" name="userId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Activate User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId, username) {
            $('#deleteUserId').val(userId);
            $('#deleteUsername').text(username);
            $('#deleteModal').modal('show');
        }

        function confirmDeactivate(userId, username) {
            $('#deactivateUserId').val(userId);
            $('#deactivateUsername').text(username);
            $('#deactivateModal').modal('show');
        }

        function confirmActivate(userId, username) {
            $('#activateUserId').val(userId);
            $('#activateUsername').text(username);
            $('#activateModal').modal('show');
        }

        // Auto-hide alerts after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Preserve filter selections
            var roleFilter = '@ViewData["RoleFilter"]';
            var activeFilter = '@ViewData["ActiveFilter"]';

            if (roleFilter) {
                $('#roleFilter').val(roleFilter);
            }

            if (activeFilter) {
                $('#activeFilter').val(activeFilter);
            }

            // Bulk operations functionality
            updateBulkActionsVisibility();

            // Select All checkbox
            $('#selectAll').on('change', function() {
                $('.user-checkbox').prop('checked', $(this).prop('checked'));
                updateBulkActionsVisibility();
            });

            // Individual checkboxes
            $('.user-checkbox').on('change', function() {
                updateSelectAllState();
                updateBulkActionsVisibility();
            });
        });

        function updateSelectAllState() {
            var totalCheckboxes = $('.user-checkbox').length;
            var checkedCheckboxes = $('.user-checkbox:checked').length;
            $('#selectAll').prop('checked', totalCheckboxes > 0 && totalCheckboxes === checkedCheckboxes);
        }

        function updateBulkActionsVisibility() {
            var checkedCheckboxes = $('.user-checkbox:checked').length;
            if (checkedCheckboxes > 0) {
                $('#bulkActionsGroup').show();
                $('#selectedCount').show();
                $('#selectedCountText').text(checkedCheckboxes);
            } else {
                $('#bulkActionsGroup').hide();
                $('#selectedCount').hide();
            }
        }

        function getSelectedUserIds() {
            var selectedIds = [];
            $('.user-checkbox:checked').each(function() {
                selectedIds.push($(this).val());
            });
            return selectedIds;
        }

        function getSelectedUsernames() {
            var usernames = [];
            $('.user-checkbox:checked').each(function() {
                usernames.push($(this).data('username'));
            });
            return usernames;
        }

        function bulkActivate() {
            var userIds = getSelectedUserIds();
            var usernames = getSelectedUsernames();

            if (userIds.length === 0) {
                alert('Please select at least one user.');
                return;
            }

            if (confirm('Are you sure you want to activate ' + userIds.length + ' user(s)?\n\nUsers: ' + usernames.join(', '))) {
                performBulkAction('BulkActivate', userIds);
            }
        }

        function bulkDeactivate() {
            var userIds = getSelectedUserIds();
            var usernames = getSelectedUsernames();

            if (userIds.length === 0) {
                alert('Please select at least one user.');
                return;
            }

            if (confirm('Are you sure you want to deactivate ' + userIds.length + ' user(s)?\n\nUsers: ' + usernames.join(', ') + '\n\nThey will not be able to login.')) {
                performBulkAction('BulkDeactivate', userIds);
            }
        }

        function bulkDelete() {
            var userIds = getSelectedUserIds();
            var usernames = getSelectedUsernames();

            if (userIds.length === 0) {
                alert('Please select at least one user.');
                return;
            }

            if (confirm('WARNING: Are you sure you want to delete ' + userIds.length + ' user(s)?\n\nUsers: ' + usernames.join(', ') + '\n\nThis action cannot be undone!')) {
                performBulkAction('BulkDelete', userIds);
            }
        }

        function performBulkAction(action, userIds) {
            // Create a form and submit it
            var form = $('<form>', {
                'method': 'POST',
                'action': '@Url.Action("' + action + '", "Users")'
            });

            // Add anti-forgery token
            form.append($('@Html.AntiForgeryToken()'));

            // Add user IDs
            $.each(userIds, function(index, userId) {
                form.append($('<input>', {
                    'type': 'hidden',
                    'name': 'userIds',
                    'value': userId
                }));
            });

            // Append to body and submit
            $('body').append(form);
            form.submit();
        }

        // Export functions
        function exportToCsv() {
            var searchTerm = $('#searchTerm').val();
            var roleFilter = $('#roleFilter').val();
            var activeFilter = $('#activeFilter').val();

            var exportUrl = '@Url.Action("ExportToCsv", "Users")' +
                '?searchTerm=' + encodeURIComponent(searchTerm || '') +
                '&role=' + encodeURIComponent(roleFilter || '') +
                '&isActive=' + encodeURIComponent(activeFilter || '');

            window.location.href = exportUrl;
        }

        function exportToExcel() {
            var searchTerm = $('#searchTerm').val();
            var roleFilter = $('#roleFilter').val();
            var activeFilter = $('#activeFilter').val();

            var exportUrl = '@Url.Action("ExportToExcel", "Users")' +
                '?searchTerm=' + encodeURIComponent(searchTerm || '') +
                '&role=' + encodeURIComponent(roleFilter || '') +
                '&isActive=' + encodeURIComponent(activeFilter || '');

            window.location.href = exportUrl;
        }
    </script>
}
