@{
    ViewData["Title"] = "Analytics Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Context.Session.GetString("Username");
    var currentRole = Context.Session.GetString("Role");

    var statistics = ViewData["Statistics"] as Dictionary<string, int> ?? new Dictionary<string, int>();
    var registrationTrend = ViewData["RegistrationTrend"] as Dictionary<string, int> ?? new Dictionary<string, int>();
    var loginActivityTrend = ViewData["LoginActivityTrend"] as Dictionary<string, int> ?? new Dictionary<string, int>();
    var recentUsers = ViewData["RecentUsers"] as IEnumerable<LoginandRegisterMVC.Models.User> ?? new List<LoginandRegisterMVC.Models.User>();
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <h2><i class="fas fa-chart-line"></i> Analytics Dashboard</h2>
        <p class="text-muted">Comprehensive user management statistics and trends</p>
    </div>
    <div class="col-md-4 text-right">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-users"></i> User List
        </a>
        <a asp-action="Logout" class="btn btn-outline-secondary">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-white">Total Users</h6>
                        <h2 class="card-text">@statistics.GetValueOrDefault("TotalUsers", 0)</h2>
                    </div>
                    <div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-white">Active Users</h6>
                        <h2 class="card-text">@statistics.GetValueOrDefault("ActiveUsers", 0)</h2>
                    </div>
                    <div>
                        <i class="fas fa-user-check fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-white">Inactive Users</h6>
                        <h2 class="card-text">@statistics.GetValueOrDefault("InactiveUsers", 0)</h2>
                    </div>
                    <div>
                        <i class="fas fa-user-times fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-white">Admin Users</h6>
                        <h2 class="card-text">@statistics.GetValueOrDefault("AdminUsers", 0)</h2>
                    </div>
                    <div>
                        <i class="fas fa-user-shield fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- Registration Trend Chart -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-chart-area"></i> User Registration Trend (Last 30 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="registrationChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Login Activity Chart -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5><i class="fas fa-chart-line"></i> Login Activity Trend (Last 30 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="loginActivityChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Second Row Charts -->
<div class="row mb-4">
    <!-- Role Distribution Chart -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-chart-pie"></i> Role Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="roleChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Account Status Chart -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5><i class="fas fa-chart-doughnut"></i> Account Status</h5>
            </div>
            <div class="card-body">
                <canvas id="statusChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Users Table -->
<div class="card">
    <div class="card-header bg-secondary text-white">
        <h5><i class="fas fa-history"></i> Recently Registered Users</h5>
    </div>
    <div class="card-body">
        @if (recentUsers.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Registered</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in recentUsers)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                    {
                                        <img src="@user.ProfilePicture" alt="@user.Username" class="rounded-circle mr-2" style="width: 30px; height: 30px; object-fit: cover;" />
                                    }
                                    <i class="fas fa-envelope text-muted"></i> @user.UserId
                                </td>
                                <td>@user.Username</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-shield-alt"></i> Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-primary">
                                            <i class="fas fa-user"></i> User
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small>@user.LastLoginAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center">No users found.</p>
        }
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>

    <script>
        // Registration Trend Chart
        var registrationCtx = document.getElementById('registrationChart').getContext('2d');
        var registrationData = @Html.Raw(Json.Serialize(registrationTrend));
        var registrationLabels = Object.keys(registrationData).map(date => {
            var d = new Date(date);
            return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        });
        var registrationValues = Object.values(registrationData);

        new Chart(registrationCtx, {
            type: 'line',
            data: {
                labels: registrationLabels,
                datasets: [{
                    label: 'New Registrations',
                    data: registrationValues,
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Login Activity Chart
        var loginCtx = document.getElementById('loginActivityChart').getContext('2d');
        var loginData = @Html.Raw(Json.Serialize(loginActivityTrend));
        var loginLabels = Object.keys(loginData).map(date => {
            var d = new Date(date);
            return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        });
        var loginValues = Object.values(loginData);

        new Chart(loginCtx, {
            type: 'bar',
            data: {
                labels: loginLabels,
                datasets: [{
                    label: 'Login Count',
                    data: loginValues,
                    backgroundColor: 'rgba(40, 167, 69, 0.6)',
                    borderColor: 'rgb(40, 167, 69)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Role Distribution Chart
        var roleCtx = document.getElementById('roleChart').getContext('2d');
        new Chart(roleCtx, {
            type: 'pie',
            data: {
                labels: ['Admin Users', 'Regular Users'],
                datasets: [{
                    data: [
                        @statistics.GetValueOrDefault("AdminUsers", 0),
                        @statistics.GetValueOrDefault("RegularUsers", 0)
                    ],
                    backgroundColor: [
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(54, 162, 235, 0.8)'
                    ],
                    borderColor: [
                        'rgb(220, 53, 69)',
                        'rgb(54, 162, 235)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });

        // Account Status Chart
        var statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Active Users', 'Inactive Users'],
                datasets: [{
                    data: [
                        @statistics.GetValueOrDefault("ActiveUsers", 0),
                        @statistics.GetValueOrDefault("InactiveUsers", 0)
                    ],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)'
                    ],
                    borderColor: [
                        'rgb(40, 167, 69)',
                        'rgb(255, 193, 7)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
